# Server Configuration
PORT=8080
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/passwordimmunity?sslmode=disable

# Mollie Payment Integration
MOLLIE_API_KEY=your_mollie_api_key_here
WEBHOOK_BASE_URL=https://your-domain.com/api/enterprise/activation/webhook
PAYMENT_REDIRECT_URL=https://your-domain.com/dashboard/subscription/complete
PAYMENT_CURRENCY=EUR
PAYMENT_LOCALE=en_US
PAYMENT_RETRY_LIMIT=3
PAYMENT_EXPIRY_HOURS=24

# Enterprise Licensing
LICENSE_PUBLIC_KEY=your_public_key_here
LICENSE_PRIVATE_KEY=your_private_key_here
LICENSE_EXPIRY_DAYS=365
LICENSE_GRACE_DAYS=14
FEATURE_GRACE_PERIOD=7

# Enterprise Features Configuration (optional, JSON format)
ENTERPRISE_FEATURES={"advanced_sso":{"price":49.99,"tier":"enterprise"},"multi_tenant":{"price":79.99,"tier":"enterprise"}}

# Feature-specific Settings
ADVANCED_SSO_ENABLED=false
MULTI_TENANT_ENABLED=false
ADVANCED_AUDIT_ENABLED=false
ADVANCED_POLICY_ENABLED=false
DIRECTORY_SYNC_ENABLED=false
EMERGENCY_ACCESS_ENABLED=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Feature Flag Defaults
DEFAULT_FEATURES=basic_vault,two_factor_auth,password_generator

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@your-domain.com

# Logging and Monitoring
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
ENABLE_PAYMENT_LOGGING=true

# Note: This is an example configuration file.
# Copy this file to .env and update with your actual values.
# Never commit the actual .env file to version control.
# Generate LICENSE_PUBLIC_KEY and LICENSE_PRIVATE_KEY using OpenSSL:
# openssl genpkey -algorithm RSA -out private_key.pem
# openssl rsa -pubout -in private_key.pem -out public_key.pem
